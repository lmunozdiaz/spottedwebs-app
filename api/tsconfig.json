{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ES2022",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./src/*"],
      "@config/*": ["./src/config/*"],
      "@repositories/*": ["./src/repositories/*"],
      "@controllers/*": ["./src/controllers/*"]
    },
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2021",
    "types": ["bun-types"]
  }
}
